<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="Derby">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <jar-file>file:./Deployment/MARLA-Server/EnvironmentPluginAPI.jar</jar-file>
        <jar-file>file:./Deployment/MARLA-Server/MARLA-Server-GUI.jar</jar-file>

        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.format_sql" value="true"/>
            <!--<property name="hibernate.show_sql" value="true"/>-->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.url" value="jdbc:derby:target/database/jpa-test-database;create=true"/>
            <property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect"/>
            <!--<property name="hibernate.connection.username" value="user" />
            <property name="hibernate.connection.password" value="password" /> !-->
        </properties>
    </persistence-unit>

    <persistence-unit name="UnitTestDerby">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <!--

        <jar-file>file:../../Deployment/MARLA-Server/EnvironmentPluginAPI.jar</jar-file>
        <jar-file>file:../../Deployment/MARLA-Server/MARLA-Server-GUI.jar</jar-file>

         https://dev.c-ware.de/confluence/display/PUBLIC/Multiple+persistence.xml+in+a+multi-module+application
         <class>de.cware.cweb.services.user.model.JpaUserImpl</class>

         -->


        <persistence-unit name="PersistenceManager.Implementation.Entities.TestEntity">
            <class>PersistenceManager.Implementation.Entities.TestEntity</class>
        </persistence-unit>


        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.format_sql" value="true"/>
            <!-- <property name="hibernate.show_sql" value="true" /> !-->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.connection.url" value="jdbc:derby:target/database/jpa-test-database;create=true"/>
            <property name="hibernate.connection.driver_class" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect"/>
            <!--<property name="hibernate.connection.username" value="user" />
            <property name="hibernate.connection.password" value="password" /> !-->
        </properties>
    </persistence-unit>
</persistence>